<section class="jumbotron text-center">
  <div class="container">
    <div class="row py-3">
      <div class="col-md-6 offset-md-3">
        <strong><%= current_user.articles.count %></strong> articles&nbsp;&nbsp;&nbsp;
        <%= link_to followers_user_path(current_user), class: "link" do %>
          <strong><%= current_user.followers.count %></strong>
          followers
        <% end %>
        <%= link_to following_user_path(current_user), class: "link" do %>
          <strong><%= current_user.followings.count %></strong>
          following&nbsp;&nbsp;&nbsp;
        <% end %>
      </div>
      <div class="row py-2">
        <div class="col-md-6 offset-md-3">
          <h5><%= @title %></h5>
        </div>
      </div>
    </div>
  </div>
</section>
